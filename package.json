{
    "name": "@nodeknit/app-graphql",
    "version": "1.0.0",
    "type": "module",
    "description": "GraphQL schema generator for Sequelize models with decorators support",
    "main": "index.js",
    "typings": "index.d.ts",
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "jest"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "extensionsToTreatAsEsm": [
            ".ts"
        ],
        "transform": {
            "^.+\\.(t|j)sx?$": [
                "ts-jest",
                {
                    "useESM": true,
                    "tsconfig": "tsconfig.json"
                }
            ]
        },
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/dist/"
        ],
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        }
    },
    "keywords": [
        "graphql",
        "sequelize",
        "decorators",
        "nodeknit"
    ],
    "author": "NodeKnit Team",
    "license": "MIT",
    "dependencies": {
        "@apollo/server": "^5.0.0",
        "graphql": "^16.8.1",
        "lodash": "^4.17.21",
        "sequelize": "^6.35.0",
        "sequelize-typescript": "^2.1.5"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/lodash": "^4.14.202",
        "@types/node": "^20.10.0",
        "jest": "^29.7.0",
        "reflect-metadata": "^0.2.2",
        "ts-jest": "^29.4.1",
        "typescript": "^5.3.0"
    },
    "peerDependencies": {
        "@nodeknit/app-manager": "*",
        "reflect-metadata": "^0.2.2"
    }
}
